{
    "compilerOptions": {
        "outDir": "../transpiled",
        "module": "commonjs",
        "target": "esnext",
        "lib": ["esnext", "webworker"],
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "../node_modules/@types",
            "../src/types"
        ],
        "types": [
            "@cloudflare/workers-types",
            "mocha",
            "."
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": ["../src/*"]
        }
    },
    "include": [
        "./*.ts",
        "../node_modules/@cloudflare/workers-types/index.d.ts"
    ]
}
